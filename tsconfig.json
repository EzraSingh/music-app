{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "lib": ["dom", "es2016", "es2017", "es2020"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "files": ["src/index.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "public", ".cache", ".template"]
}
